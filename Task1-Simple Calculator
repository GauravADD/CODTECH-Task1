import tkinter as tk
from tkinter import messagebox

# Function to evaluate the expression
def evaluate_expression(expression):
    try:
        result = str(eval(expression))
        display_var.set(result)
    except ZeroDivisionError:
        messagebox.showerror("Error", "Cannot divide by zero!")
    except Exception as e:
        messagebox.showerror("Error", f"Invalid input: {e}")

# Function to update the display when a button is clicked
def on_button_click(value):
    current_text = display_var.get()
    display_var.set(current_text + value)

# Function to clear the display
def clear_display():
    display_var.set("")

# Create the main window
root = tk.Tk()
root.title("Simple Calculator")
root.geometry("300x400")

# Display variable
display_var = tk.StringVar()

# Entry field to display input and results
display = tk.Entry(root, textvariable=display_var, font=("Arial", 24), bd=10, insertwidth=2, width=14, borderwidth=4)
display.grid(row=0, column=0, columnspan=4)

# Calculator buttons
buttons = [
    '7', '8', '9', '/',
    '4', '5', '6', '*',
    '1', '2', '3', '-',
    '0', 'C', '=', '+'
]

# Positioning buttons in a grid
row_value = 1
col_value = 0
for button in buttons:
    if button == "=":
        btn = tk.Button(root, text=button, padx=20, pady=20, font=("Arial", 18),
                        command=lambda: evaluate_expression(display_var.get()))
    elif button == "C":
        btn = tk.Button(root, text=button, padx=20, pady=20, font=("Arial", 18), command=clear_display)
    else:
        btn = tk.Button(root, text=button, padx=20, pady=20, font=("Arial", 18),
                        command=lambda value=button: on_button_click(value))

    btn.grid(row=row_value, column=col_value)
    col_value += 1

    if col_value > 3:
        col_value = 0
        row_value += 1

# Start the main event loop
root.mainloop()
